      "version": "1.0.0"
    },
    "item": [
      {
        "name": "Delivery Staff",
        "item": [
          {
            "name": "List Delivery Staff",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/delivery-staff/"
            }
          },
          {
            "name": "Create Delivery Staff",
            "request": {
              "method": "POST",
              "url": "{{base_url}}/api/delivery-staff/",
              "body": {
                "mode": "raw",
                "raw": "{\"username\": \"staff1\", \"password\": \"password123\", \"email\": \"staff1@example.com\"}"
              }
            }
          },
          {
            "name": "Retrieve Delivery Staff",
            "request": {
              "method": "GET",
              "url": "{{base_url}}/api/delivery-staff/1/"
            }
          },
          {
            "name": "Update Delivery Staff",
            "request": {
              "method": "PUT",
              "url": "{{base_url}}/api/delivery-staff/1/",
              "body": {
                "mode": "raw",
                "raw": "{\"email\": \"newemail@example.com\"}"
              }
            }
          },
          {
            "name": "Delete Delivery Staff",
            "request": {
              "method": "DELETE",
              "url": "{{base_url}}/api/delivery-staff/1/"
            }
          }
        ]
      },
      {
